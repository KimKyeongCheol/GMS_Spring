<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.gms.web.mapper.BoardMapper">
	  <resultMap id="respMap" type="com.gms.web.command.RespMap">
	 		 <id property="seq" column="resp"/>
			<result property="count" column="count"/>
	  		<result property="id" column="id"/>
	 		<result property="title" column="title"/>
	 		<result property="content" column="content"/>
	  		<result property="regdate" column="regdate"/>
			<result property="hitcount" column="hitcount"/>
	  		<result property="email" column="email"/>
			<result property="phone" column="phone"/>
			<result property="birthday" column="birthday"/>
			<result property="gender" column="gender"/>
			<result property="articleSeq" column="article_seq"/>
	  </resultMap>
	  <resultMap id="article" type="com.gms.web.board.Article">
	  		<id property="articleSeq" column="article_seq"/>
	 		<result property="title" column="title"/>
	 		<result property="content" column="content"/>
	  	 	<result property="id" column="id"/>
	  		<result property="regdate" column="regdate"/>
			<result property="hitcount" column="hitcount"/>
	  </resultMap>
	   
	  
	 
  
  
  <select id="insert" resultType="com.gms.web.command.Command">
  </select>

  <!-- #{search} : '' 가 있고 ${}는 ''가 없다. -->
   <select id="selectList" resultMap="article" parameterType="com.gms.web.command.Command">
   	select * from board
  </select>
  <!-- select * from 처럼 *를 부여하면 유지보수하기 힘들기때문에 컬럼명을 전부 입력해준다. -->
<!-- 	<select id="count" resultType="String"
 	parameterType="com.gms.web.command.Command" >
 	select count(*) as count from board
  </select> -->
	<select id="count" resultMap="respMap"
 	parameterType="com.gms.web.command.Command" >
 	select count(*) as count from board
  </select> 
  <select id="selectOne" resultMap="article"
 parameterType="com.gms.web.command.Command" >
 	select * from board where article_seq like #{article}
  </select>
  <update id="update" parameterType="com.gms.web.command.Command" >
  UPDATE board SET title=#{action},content=#{search} WHERE article_seq = #{article}
  </update>
  
  <delete id="delete" parameterType="com.gms.web.command.Command">
  </delete>

  	
  	
  </mapper>